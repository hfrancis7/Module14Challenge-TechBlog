<section class="post-card">
    <div class="post-header">
        <h2>Update Post</h2>
    </div>
    <form method="post" class="updatePost-form">
        <div class="form-flex">
            <div class="">
                <label for="post-title-input">Title: </label>
                <input class="form-input" type="text" id="post-title-input" value="{{title}}">
            </div>
            <div class="">
                <label for="post-description-input">Description: </label>
                <input class="form-input" type="text" id="post-description-input" value="{{post_description}}">
            </div>
            <div class="">
                <button class="" id="updatePost-btn" type="submit" value="Update">Update</button>
            </div>
        </div>
    </form>
    <button class="" id="deletePost-btn" onclick="deletePost();" value="Delete">Delete</button>
</section>

<script src="/js/post.js"></script>